generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  status       Status    @default(todo)
  defined_time String
  started_at   DateTime?
  completed_at DateTime?
  paused_in    DateTime?
  list_number  Int       @default(autoincrement())

  @@map(name: "tasks")
}

enum Status {
  todo
  in_progress
  paused
  continuing
  completed
}
